{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "skills": {
      "type": "string",
      "required": false
    },
    "project_img": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "live_link": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "github_link": {
      "type": "string",
      "required": true,
      "unique": true
    }
  }
}
